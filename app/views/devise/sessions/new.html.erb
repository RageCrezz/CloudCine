<div class="login-view">
  <h2 class="title">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :username, class: 'label' %>
      <div class="control">
        <%= f.text_field :username, class: 'input', autofocus: true, autocomplete: "username" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :password, class: 'label' %>
      <div class="control">
        <%= f.password_field :password, class: 'input', autocomplete: "current-password" %>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <div class="control">
          <label class="checkbox">
            <%= f.check_box :remember_me %>
            Remember me
          </label>
        </div>
      </div>
    <% end %>
    <div class="is-fullwidth mt-4 is-flex">
      <%= f.submit "Log in", class: "button is-fullwidth" %>
    </div>
  <% end %>
  <div class="link-view">
    <%= render "devise/shared/links" %>
  </div>
</div>
