<div class="hero is-fullheight is-flex is-flex-direction-column is-justify-content-center is-align-items-center">
  <%= image_tag 'logo/logo.svg', alt: 'logo', class: 'image is-128x128 mb-4' %>
  <h2 class="title is-4 mb-5">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
    <div class="field mb-2">
      <label class="label"><%= f.label :email %></label>
      <div class="control">
        <%= f.email_field :email, class: 'input', autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class="field">
      <label class="label"><%= f.label :password %></label>
      <div class="control">
        <%= f.password_field :password, class: 'input', autocomplete: "current-password" %>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field my-2">
        <div class="control">
          <label class="checkbox">
            <%= f.check_box :remember_me %>
            Remember me
          </label>
        </div>
      </div>
    <% end %>
    <%= render(ButtonComponent.new(label: "Log in", style: "primary", form: f, class: "is-fullwidth")) %>
  <% end %>
  <div class="mt-2 is-flex is-flex-direction-column has-text-centered">
    <%= render "devise/shared/links" %>
  </div>
</div>